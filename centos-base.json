{
    "builders": [
        {
            "type": "docker",
            "image": "centos:centos7",
            "commit": true
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/ansible.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "playbooks/centos-base.yml",
            "playbook_dir": "playbooks"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "eneset/centos-base",
                "tag": "latest"
            }
        ]
    ]
}
